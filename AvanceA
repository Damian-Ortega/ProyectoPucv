#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#define MAX 10000

struct Persona
{
	char *nombre;
	char *rut;
	int edad;
	struct fechaNacimiento fecha;
	int puntajeRiesgoSocial;
};

struct fechaNacimiento
{
    int dia;
    int mes;
    int anio;
};

struct nodoPersona{

	struct Persona *persona;
	struct nodoPersona *sig,*ant;

};

struct Sede
{
	char *direccion;
	int codigoSede;
	struct nodoPersona *persona;
};

struct NodoSede
{
	struct Sede *sede;
	struct NodoSede *sig;
};

struct Region 
{
	char *Nombre;
	int pLibre;
	struct Sede *sede;
};


/*
    ~Personas~
*/

struct Persona *crearPersona(char *nombre,char *rut,int edad);
struct Persona *eliminarPersona(char *rut,struct nodoPersona *head);

struct Persona *buscarPersona(char *rut,struct nodoPersona *head);
int agregarPersona(struct Persona *nuevo,struct nodoPersona *head);
int calcularEdad(int dia,int mes,int anio);
void mostrarNinos();
void mostrarTodosLosNinos();
void mostrarNinosSede();
void mostrarNinosRegion();
void enlazarPersona();

